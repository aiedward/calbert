  "version": "0.2.0",
  "configurations": [
    {
      "name": "Calbert: Launch pretraining",
      "type": "python",
      "request": "launch",
      "program": "calbert.py",
      "args": [
        "train",
        "--tokenizer-dir",
        "$PWD/tokenizer",
        "--train-file",
        "$PWD/train.txt",
        "--eval-file",
        "$PWD/valid.txt",
        "--out-dir",
        "testy"
      ],
      "console": "integratedTerminal"
    }
  ]
}
